<?xml version="1.0" encoding="utf-8"?><!--activity_home.xml-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!--MainActivity → ConfigActivity (ajustes) Simular pantalla de ajustes interna Usa Toolbar con botón “Atrás”.-->
    <!-- Barra superior con soporte para menú -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brand_primary"
            android:title="Menú Principal"
            android:titleTextColor="@android:color/white"
            app:titleCentered="true"
            />


    </com.google.android.material.appbar.AppBarLayout>


    <!-- Contenido desplazable, con padding propio -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- Columna simple, centrada y con ancho máximo para que no se estire en tablets -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Contenedor para limitar el ancho en pantallas grandes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main" />

                <!-- Botones -->
                <Button
                    android:id="@+id/btnIrPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ir a Perfil (resultado)" />

                <Button
                    android:id="@+id/btnAbrirWeb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Abrir sitio web" />

                <Button
                    android:id="@+id/btnEnviarCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Enviar correo" />

                <Button
                    android:id="@+id/btnCompartir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Compartir texto" />

                <Button
                    android:id="@+id/btnLinterna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Linterna ON/OFF" />

                <Button
                    android:id="@+id/btnCamara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir Cámara"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <!--Abrir Activity con animación personalizada Agregar transición (overridePendingTransition) Mejora experiencia de usuario-->
                    <Button
                        android:id="@+id/btnNosotros"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Nosotros"
                        app:backgroundTint="@color/brand_primary" />

                    <!-- Activity → FragmentActivity con ViewPager Cambiar entre vistas Ideal para apps con pestañas-->
                    <Button
                        android:id="@+id/btnConfiguracion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/brand_primary"
                        android:text="Configuracion" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
